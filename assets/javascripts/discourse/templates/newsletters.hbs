<section class="header">
  <div class="container">
    <div class="grid grid--middle mb+">
      <div class="grid__item col-1-3 lap--col-1-2 phone--col-1-1">
        <h2>NWS:LTTR</h2>
      </div>
      <div class="grid__item col-2-3 lap--col-1-2 phone--col-1-1">
        <h3>Curated open source and security articles, latest vulnerabilities, projects and news.</h3>
      </div>
    </div>

    {{#if model.latestNewsletter }}
      <div class="grid grid--middle">
        <div class="grid__item col-1-1">
          <h3 class="text--center">
            <a href="/newsletters/{{model.latestNewsletter.id}}" target="_blank" class="color--primary">
              read the latest edition
            </a>
          </h3>
        </div>
      </div>
    {{/if}}
  </div>
</section>

<section class="subscribe">
  <div class="background-icon">
    <i class="fa fa-bullhorn"></i>
  </div>

  <div class="container">
    <div class="grid grid--middle grid--wide">
      <div class="grid__item col-3-7 lap--col-1-2 phone--col-1-1">
        <h2 class="mb">Subscribe</h2>
        <p>
          No spam, ever.<br>
          Unsubscribe at any time.
        </p>
      </div>
      <div class="grid__item col-4-7 lap--col-1-2 phone--col-1-1">
        <form class="marketo-form m0" action="https://srcclr.com/" method="GET">
          <div class="grid grid--middle">
            <div class=" grid__item col-10-12 portable--col-1-1">
              <input class="control--text color--white mv" id="Email" maxlength="80" results="0" name="Email" required="" type="email" placeholder="enter your email to subscribe">
            </div>
            <div class="grid__item col-2-12">
              <button type="submit" class="btn btn--sm">
                Submit
                <i class="sci sci__arrow--external-link"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</section>

