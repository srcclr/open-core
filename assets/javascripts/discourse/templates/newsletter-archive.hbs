<h3 class="mb-">NWS:LTTR Archive</h3>

{{#conditional-loading-spinner condition=loading}}
  <table class="table--striped">
    <tbody>
      {{#each newsletter in model.newsletters}}
        <tr>
          <td>{{newsletter.title}}</td>
          <td><a href="/newsletters/{{newsletter.id}}/download" class="color--primary attachment" target="_">Download PDF</a></td>
          <td><a href="/nwslttr/{{newsletter.id}}" class="color--primary">View</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div>
    <a href {{action "previousPage"}} {{bind-attr class="firstPage:hidden"}}>
      <i class="sci sci__caret--left"></i>
    </a>
    <a href {{action "nextPage"}} {{bind-attr class=":pull--right lastPage:hidden"}}>
      <i class="sci sci__caret--right"></i>
    </a>
  </div>
{{/conditional-loading-spinner}}
